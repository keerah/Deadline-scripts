[State]
Type=Enum
Items=Global Enabled;Disabled
Category=Options
CategoryOrder=0
Index=0
Required=True
Label=State
Default=Disabled
Description=How this event plugin should respond to events. If Global, all jobs and Workers will trigger the events for this plugin. If Disabled, no events are triggered for this plugin.

[SenderEmail]
Type=string
Category=Email
CategoryOrder=1
Index=1
Required=True
Label=Sender email
Default=example@gmail.com
Description=Email From address

[ReceiverEmail]
Type=string
Category=Email
CategoryOrder=1
Index=2
Required=True
Label=Reciever email
Default=example@gmail.com
Description=Email To address

# SMTP

[SmtpHostname]
Type=string
Category=SMTP settings
CategoryOrder=2
Index=0
Required=True
Label=Server hostname
Default=smtp.gmail.com
Description=SMTP server name or ip

[SmtpPort]
Type=integer
Category=SMTP settings
CategoryOrder=2
Index=1
Required=True
Label=Server port
Default=587
Minimum=0
Maximum=65535
Description=SMTP server port number. 587 for STARTTLS (google mail compatible).

[SmtpAccount]
Type=string
Category=SMTP settings
CategoryOrder=2
Index=2
Required=True
Label=Account name
Default=example@gmail.com
Description=SMTP server account name. Usually it's the sender email.

[SmtpToken]
Type=password
Category=SMTP settings
CategoryOrder=2
Index=3
Required=True
Label=Password
Default=
Description=SMTP server account password or token.

# Message type

[MsgType]
Type=Enum
Items=html;plain
Category=Message type
CategoryOrder=3
Index=0
Required=True
Default=text
Label=Content type
Description=Send message as plain text or html

